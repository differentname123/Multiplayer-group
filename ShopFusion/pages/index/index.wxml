<!-- index.wxml -->
<view class="page-container">
  <!-- 自定义导航栏 -->
  <custom-nav
    searchKeyword="{{searchKeyword}}"
    bind:search="onSearch"
    bind:cancel="onCancel"
    bind:input="onSearchInput"
  />

  <!-- 页面内容 -->
  <view class="content">
    <!-- 筛选栏 -->
    <view class="filter-bar">
      <text
        class="filter-tag {{filterSelected.onePerson ? 'active' : ''}}"
        data-type="onePerson"
        bindtap="onFilterClick"
      >
        只差一人
      </text>
      <text
        class="filter-tag {{filterSelected.mySubscription ? 'active' : ''}}"
        data-type="mySubscription"
        bindtap="onFilterClick"
      >
        我的订阅
      </text>
    </view>

    <!-- 商品列表 -->
    <scroll-view
      class="scroll-view"
      scroll-y
      bindscrolltolower="onScrollToLower"
      bindrefresherrefresh="onPullDownRefresh"
      refresher-enabled="true"
      refresher-triggered="{{isRefreshing}}"
    >
      <view class="product-list">
        <block wx:for="{{filteredProductList}}" wx:key="id">
          <van-card
            thumb="{{item.imageUrl}}"
            title="{{item.title}}"
            price="{{item.price}}"
            desc="优惠：¥{{item.discountPrice}}"
            tag="{{item.countdown}}"
            bind:click="onProductClick"
            data-item="{{item}}"
          >
            <view slot="num">
              还差{{item.groupRemainCount}}人拼团成功
            </view>
            <view slot="footer">
              <van-button type="info" size="mini" bind:tap="onJoinGroup" data-keycode="{{item.keyCode}}">参与拼团</van-button>
            </view>
          </van-card>
        </block>

        <!-- 加载更多 -->
        <view class="loading-area" wx:if="{{loadingMore}}">
          <van-loading size="24px" type="spinner" />
          <text>正在加载...</text>
        </view>

        <!-- 没有更多商品了 -->
        <view class="no-more" wx:if="{{!hasMore && !loadingMore && filteredProductList.length > 0}}">
          <text>没有更多商品了</text>
        </view>

        <!-- 没有数据 -->
        <view class="no-data" wx:if="{{filteredProductList.length === 0 && !loadingMore}}">
          <text>没有符合条件的商品</text>
        </view>

      </view>
    </scroll-view>
  </view>
</view>
