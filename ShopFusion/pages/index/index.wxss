/* 页面容器 */
.container {
  padding: 10px;
}

/* 商品列表样式 */
.product-list {
  margin-top: 10px;
}

.product-item {
  display: flex;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  margin-bottom: 10px;
}

.product-image {
  width: 100px;
  height: 100px;
  object-fit: cover;
}

.product-info {
  flex: 1;
  margin-left: 15px;
}

.price-group {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5px;
}

.price {
  color: #ff3c3c;
  font-weight: bold;
}

/* 搜索框与筛选栏样式 */
van-search {
  margin-bottom: 15px; /* 增加搜索框和筛选栏之间的间距 */
}

.filter-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 15px;
}

van-tag {
  padding: 5px 10px;
  transition: all 0.3s ease;
}

van-tag[type="primary"] {
  background-color: #ff3c3c !important;
  color: white !important;
}

van-tag[type="default"] {
  background-color: #f5f5f5 !important;
  color: #333 !important;
}
