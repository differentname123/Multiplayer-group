/* 页面容器 */
.page-container {
  position: relative;
  height: 100vh;
  background-color: #f0f0f5;
}

/* 内容区域，位于导航栏下面 */
.content {
  position: absolute;
  top: 64px;  /* 状态栏高度 + 导航栏高度，需与组件中的 navBarHeight 保持一致 */
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  z-index: 999;
}

/* 筛选标签样式 */
.filter-tag {
  font-size: 16px;
  color: black;
  padding: 5rpx 10rpx;
  position: relative;
}

.filter-tag.active {
  color: red;
}

.filter-tag.active::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  background-color: red;
}

/* 商品列表样式 */
.scroll-view {
  flex: 1;
  overflow: auto;
}

.product-list {
  padding: 20rpx;
}

/* 加载更多样式 */
.loading-area {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}

/* 没有更多商品样式 */
.no-more {
  text-align: center;
  padding: 10px 0;
  color: #888;
}

/* 没有数据样式 */
.no-data {
  text-align: center;
  padding: 20px 0;
  color: #888;
}
