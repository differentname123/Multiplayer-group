/* 页面容器 */
.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f0f0f5;
}

/* 搜索栏与筛选栏样式 */
van-search {
  margin-bottom: 5px;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  justify-content: space-around;
  margin-bottom: 5px;
}

/* 标签样式 */
van-tag {
  padding: 5px 10px;
  transition: all 0.3s ease;
}

/* 商品列表样式 */
.product-list {
  padding: 10px;
}

/* scroll-view 样式 */
.scroll-view {
  flex: 1;
}

/* 加载更多样式 */
.loading-area {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}

/* 没有更多商品样式 */
.no-more {
  text-align: center;
  padding: 10px 0;
  color: #888;
}

/* 没有数据样式 */
.no-data {
  text-align: center;
  padding: 20px 0;
  color: #888;
}
