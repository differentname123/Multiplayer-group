.container {
  padding: 30rpx;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 30rpx 0;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
  background-color: #eaeaea;
}

.username {
  font-size: 36rpx;
  color: #333;
  margin-top: 10rpx;
}

.section {
  margin: 30rpx 0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
}

.menu {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.menu-item icon {
  margin-right: 20rpx;
}

.points {
  color: #f00;
  font-size: 24rpx;
}
